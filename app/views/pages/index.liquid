---
title: Home page
published: true
handle: home
---
{% extends 'layouts/default' %}

{% block content %}



  <div class="uk-container">

    <div class="hero">
      {% editable_text introduction, rows: 5, priority: 1 %}
        <h1 class="heading-primary">A site with authentication</h1>
        <p class="uk-text-large">This is using the last authentication LocomotiveCMS feature</p>
      {% endeditable_text %}
    </div>

    <div class="uk-grid" uk-grid-parallax>
      {% for project in contents.projects %}
      <div class="uk-width-1-3@m">
        <div class="uk-card uk-card-default">
          <div class="uk-card-media-top">
            <a href="{% path_to 'project' %}"><img src="{{ project.featured.url }}"></a>
          </div>
          <div class="uk-card-body">
            <h3><a href="{% path_to 'project' %}">{{ project.name }}</a></h3>
            <p>{{ project.account.name }}</p>
            {{ project.account.email }}
            <img src="{{ project.account.avatar.url | resize: '40x40' }}">
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>

  <div class="uk-container">
    {% for account in contents.accounts %}
      <a href="{% path_to 'account' %}">{{ account.name }}</a>
      <img src="{{ account.avatar.url }}">
      {% for project in account.projects %}
        {{ project.name }}
      {% endfor %}
    {% endfor %}
  </div>

{% endblock %}
