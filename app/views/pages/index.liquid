---
title: Home page
published: true
handle: home
editable_elements:
  content/introduction: |-
    <h1 class="heading-primary">Showcase your locomotice site</h1>
            <p class="uk-text-large">Share & inspire other developers / designers. Create account to start share!</p>
            <a href="#" class="uk-button uk-button-primary">Create account</a>
---
{% extends 'layouts/default' %}

{% block content %}



  <div class="uk-container">

    <div class="hero">
      {% editable_text introduction, rows: 5, priority: 1 %}
        <h1 class="heading-primary">Showcase your locomotice site</h1>
        <p class="uk-text-large">Share & inspire other developers / designers. Create account to start share!</p>
        <a href="#" class="uk-button uk-button-primary">Create account</a>
      {% endeditable_text %}
    </div>

    <div class="uk-grid" uk-grid-parallax>
      {% for project in contents.projects %}
      <div class="uk-width-1-3@m">
        <div class="uk-card uk-card-default">
          <div class="uk-card-media-top">
            <a href="{% path_to 'project' %}"><img src="{{ project.featured.url }}"></a>
          </div>

          <div class="uk-card-body">
            <h3><a href="{% path_to 'project' %}">{{ project.name }}</a></h3>
            <div class="uk-flex uk-flex-middle">
              <img class="uk-margin-right" src="{{ project.account.avatar.url | resize: '40x40' }}">
              <div>
                <h5>{{ project.account.name }}</h5>
                {{ project.stars }}
              </div>
            </div>

          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>

  <div class="uk-container">
    {% for account in contents.accounts %}

      <article class="m-profile">
        <img class="m-profile-picture" src="{{ account.avatar.url }}">
        <div class="m-profile-name"><a href="{% path_to 'account' %}">{{ account.name }} {{ account.surname }}</a></div>

        <div class="m-profile-meta">
          <div class="m-profile-stats">{{ account.projects.size}} projects</div>
          <div class="m-profile-stars">43 stars</div>
        </div>
      </article>

    {% endfor %}
  </div>

{% endblock %}
